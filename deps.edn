{:paths ["src" "resources"]
 :deps
   {org.clojure/clojure                 {:mvn/version "1.10.3"}
    org.clojars.pmonks/clj-2253         {:mvn/version "0.1.0"}
    org.clojure/tools.logging           {:mvn/version "1.1.0"}
    ch.qos.logback/logback-classic      {:mvn/version "1.2.4"}
    org.slf4j/jcl-over-slf4j            {:mvn/version "1.7.32"}
    org.slf4j/log4j-over-slf4j          {:mvn/version "1.7.32"}
    org.slf4j/jul-to-slf4j              {:mvn/version "1.7.32"}
    clojure.java-time/clojure.java-time {:mvn/version "0.3.2"}
    org.clojure/tools.cli               {:mvn/version "1.0.206"}
    aero/aero                           {:mvn/version "1.1.6"}
    mount/mount                         {:mvn/version "0.1.16"}
    org.suskalo/discljord               {:mvn/version "1.2.3"}
    borkdude/sci                        {:mvn/version "0.2.6"}}
 :aliases
   {; clj -M:run -c /path/to/config.edn
    :run
      {:main-opts ["-m" "for-science.main"]}

    ; clj -X:uberjar
    :uberjar
      {:replace-deps {com.github.seancorfield/depstar {:mvn/version "2.1.267"}}
       :exec-fn      hf.depstar/uberjar
       :exec-args    {:jar        "./target/for-science-standalone.jar"
                      :jar-type   :uber
                      :main-class "for-science.main"
                      :aot        true}}

    ; clj -M:check
    :check
      {:extra-deps {athos/clj-check {:git/url "https://github.com/athos/clj-check.git"
                                     :sha     "518d5a1cbfcd7c952f548e6dbfcb9a4a5faf9062"}}
       :main-opts  ["-m" "clj-check.check"]}


    ; clj -M:kondo
    :kondo
      {:extra-deps {clj-kondo/clj-kondo {:mvn/version "2021.06.18"}}
       :main-opts  ["-m" "clj-kondo.main" "--lint" "src" "resources"]}

    ; clj -M:eastwood
    :eastwood
      {:extra-deps {jonase/eastwood {:mvn/version "0.9.3"}}
       :main-opts  ["-m" "eastwood.lint" {:source-paths ["src" "resources"]}]}

    ; clj -M:outdated
    :outdated
      {:extra-deps {com.github.liquidz/antq {:mvn/version "0.16.0"}}
       :main-opts  ["-m" "antq.core"]}}}
