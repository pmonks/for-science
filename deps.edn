{:paths ["src" "resources"]
 :deps
   {org.clojure/clojure    {:mvn/version "1.10.3"}
;    borkdude/sci           {:mvn/version "0.2.6"}}    ; Recommended by borkdude to track master directly, instead (see https://clojurians.slack.com/archives/C015LCR9MHD/p1629322130102700?thread_ts=1629318524.097100&cid=C015LCR9MHD)
    borkdude/sci           {:git/url "https://github.com/borkdude/sci.git"
                            :git/sha "8e2a4ce459bddede8b90a7ab04feb2de64f6fa8b"}
    pmonks/discljord-utils {:git/url "https://github.com/pmonks/discljord-utils.git"
                            :git/sha "d71076a6109c57f78737fffd8465a6c5b508b129"}}
 :aliases
   {; clj -M:run -c /path/to/config.edn
    :run
      {:main-opts ["-m" "bot.main"]}

    ; clj -X:uberjar
    :uberjar
      {:replace-deps {com.github.seancorfield/depstar {:mvn/version "2.1.303"}}
       :exec-fn      hf.depstar/uberjar
       :exec-args    {:jar        "./target/for-science-standalone.jar"
                      :jar-type   :uber
                      :main-class "bot.main"
                      :aot        true}}

    ; clj -M:check
    :check
      {:extra-deps {athos/clj-check {:git/url "https://github.com/athos/clj-check.git"
                                     :sha     "518d5a1cbfcd7c952f548e6dbfcb9a4a5faf9062"}}
       :main-opts  ["-m" "clj-check.check"]}

    ; clj -M:kondo
    :kondo
      {:extra-deps {clj-kondo/clj-kondo {:mvn/version "2021.09.15"}}
       :main-opts  ["-m" "clj-kondo.main" "--lint" "src" "resources"]}

    ; clj -M:eastwood
    :eastwood
      {:extra-deps {jonase/eastwood {:mvn/version "0.9.9"}}
       :main-opts  ["-m" "eastwood.lint" {:source-paths ["src" "resources"]}]}

    ; clj -M:outdated
    :outdated
      {:extra-deps {com.github.liquidz/antq {:mvn/version "1.1.0"}}
       :main-opts  ["-m" "antq.core"]}}}
